// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Repository {
  id String @id @default(uuid())
  name String @unique
  url String
  sshClone String
  httpClone String
  languages Language[]
}

model Language {
  id String @id @default(uuid())
  language String
  percentage String
  repository Repository @relation(fields: [repositoryId], references: [id])
  repositoryId String
}
